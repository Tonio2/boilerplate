{
    "name": "boilerplate",
    "version": "1.0.0",
    "private": true,
    "description": "Full-stack TypeScript boilerplate with React + Express + PostgreSQL",
    "scripts": {
        "install:client": "cd client && npm ci",
        "install:server": "cd server && npm ci",
        "build:client": "cd client && npm run build",
        "build:server": "cd server && npm run build",
        "build": "npm run install:client && npm run install:server && npm run build:client && npm run build:server",
        "start": "cd server && node dist/index.js",
        "dev:server": "cd server && npm run dev",
        "dev:client": "cd client && npm run dev",
        "db:migrate": "cd server && npm run db:migrate",
        "db:push": "cd server && npm run db:push",
        "prepare": "husky",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:client": "eslint client/",
        "lint:server": "eslint server/",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:client": "prettier --write client/",
        "format:server": "prettier --write server/",
        "type-check": "npm run type-check:client && npm run type-check:server",
        "type-check:client": "cd client && tsc --noEmit",
        "type-check:server": "cd server && tsc --noEmit",
        "check": "npm run lint && npm run format:check && npm run type-check"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "keywords": [
        "boilerplate",
        "typescript",
        "react",
        "express",
        "postgresql"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/compat": "^1.4.1",
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "eslint-plugin-unused-imports": "^4.3.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "typescript-eslint": "^8.50.1"
    },
    "lint-staged": {
        "client/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "server/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    }
}
