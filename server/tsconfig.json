{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@features/*": ["src/features/*"]
        }
    },
    "include": ["src/**/*", "drizzle.config.ts"],
    "exclude": ["node_modules", "dist"]
}
